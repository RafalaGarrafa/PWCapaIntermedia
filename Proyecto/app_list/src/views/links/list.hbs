  
<div class="container p-4">
    <div class="row">
        {{#each links}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a class = "a_lista" id = "a_list_{{id}}" href = "localhost:4200/games" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{listname}}
                            </h3>   
                            <label id = "lbl_id_lista" hidden = "true">{{id}}</label>
                        </a>
                        <p class="m-2">{{resumen}}</p>
                        <p>{{timeago created}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger"> Delete list</a>
                        <a href="/links/edit/{{id}}" class="btn btn-primary"> Edit</a>

                    </div>
                </div>
            </div>
            {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>Chale... No tienes nada guardado :(</p>
                        <a href="/links/add">Crea una :v </a>
                    </div>
                </div>
        {{/each}}
    </div>
</div>